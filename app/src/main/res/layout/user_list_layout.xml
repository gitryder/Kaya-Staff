<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_list_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:src="@drawable/user_m" />

    <TextView
        android:id="@+id/user_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_list_imageview"
        android:layout_toEndOf="@+id/user_list_imageview"
        android:focusableInTouchMode="true"
        android:text="Test Superuser"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/user_list_rollid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_list_name"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/user_list_imageview"
        android:text="15202A0000"
        android:textSize="18sp"
        android:textStyle="italic" />


</RelativeLayout>