<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_list_imageview"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/user_m"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/user_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_list_imageview"
        android:layout_toEndOf="@+id/user_list_imageview"
        android:text="Test Superuser"
        android:textSize="24sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/user_list_rollid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/user_list_name"
        android:layout_toRightOf="@id/user_list_imageview"
        android:text="15202A0000"
        android:textStyle="italic"
        android:textSize="20sp"/>



</RelativeLayout>